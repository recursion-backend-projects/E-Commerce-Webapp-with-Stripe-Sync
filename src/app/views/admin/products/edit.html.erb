<div class="flex flex-col items-center pt-10 antialiased">
    <div class="flex w-full flex-col space-y-4 py-4 md:w-4/5 lg:w-1/3">
        <h1 class="py-2 text-center text-2xl font-bold md:text-start md:text-4xl">
            商品情報の編集
        </h1>
        <%= form_with model: [:admin, @product], class: 'space-y-4 rounded-xl border border-gray-200 bg-white p-4 shadow-xl' do |form|%>
            <div class="flex flex-col">
                <%= form.label :name, "名前" %>
                <%= form.text_field :name,  class: 'rounded border border-gray-300 p-2' %>
                <% @product.errors.full_messages_for(:name).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>
            <div class="flex flex-col">
                <%= form.label :description, "説明" %>
                <%= form.text_area :description, class: 'rounded border border-gray-300 p-2'%>
                <% @product.errors.full_messages_for(:description).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>
            <div class="space-y-4">
                <label for="product-image">画像</label>
                <!-- 商品画像 -->
                <div class="flex w-1/2 items-center md:w-2/5 lg:w-1/3">
                    <!-- TODO: 画像アップロード場所が決まったら実装する -->
                    <%= image_tag 'sample_image.jpg', class: 'block h-1/2 rounded-lg shadow-xl md:h-auto' %>
                </div>
                <input
					class="block cursor-pointer rounded-lg border border-gray-300 bg-gray-50 text-sm text-gray-900 focus:outline-none dark:border-gray-600 dark:bg-gray-700 dark:text-gray-400 dark:placeholder-gray-400"
					aria-describedby="user_avatar_help"
					id="user_avatar"
					type="file"
				/>
                </div>
                <div class="flex flex-col">
                    <%= form.label '作者'%>
                    <%= form.text_field :creator, class: 'rounded border border-gray-300 p-2'%>
                </div>
                <div class="flex max-w-sm flex-col">
                    <%= form.label 'カテゴリー' %>
                    <%= form.select :product_category_id, options_for_select(@categories.map { |c| [c.name, c.id] }, @product.product_category_id), {}, {class: 'block w-1/2 rounded-lg border border-gray-300 bg-gray-200 p-2 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500'} %>
                </div>
                <div class="w-full space-y-3">
                    <div class="flex flex-col">
                        <%= form.label '在庫数'%>
                        <%= form.number_field :stock, class: 'w-1/2 rounded border border-gray-300 p-2' %>
                    </div>
                    <div class="flex flex-col">
                        <%= form.label :price, "価格" %>
                        <%= form.number_field :price,  class: 'w-1/2 rounded border border-gray-300 p-2' %>
                    </div>
                </div>
                <div class="flex max-w-sm flex-col">
                    <%= form.label :status, "ステータス" %>
                    <!-- config/locales/ja.ymlを参照して、draft->下書き　みたいになるようにしてます  -->
                    <%= form.select :status, Product.statuses.keys.map { |s| [I18n.t("products.status.#{s}"), s] } ,{}, {class: 'block w-1/2 rounded-lg border border-gray-300 bg-gray-200 p-2 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500'} %>
                </div>
                <div class="flex justify-between">
                    <%= link_to 'キャンセル',  admin_products_path, class: 'text-center my-2 w-1/4 rounded-lg border border-gray-300 bg-white py-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700' %>
                    <%= form.submit '保存する', class: 'my-2 w-1/4 rounded bg-yellow-400 py-2 hover:bg-yellow-500 hover:cursor-pointer' %>
                </div>
            <% end %>
        </div>
    </div>
