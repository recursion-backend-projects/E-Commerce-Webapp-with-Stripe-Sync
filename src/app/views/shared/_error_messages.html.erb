<% if model.errors.any? %>
    <div class="relative rounded border border-red-400 bg-red-100 px-4 py-3 text-red-700" role="alert">
        <strong class="font-bold">通知:</strong>
        <ul class="list-disc pl-5">
            <% model.errors.each do |error| %>
                <li><%= error.full_message %></li>
            <% end %>
        </ul>
    </div>
<% end %>