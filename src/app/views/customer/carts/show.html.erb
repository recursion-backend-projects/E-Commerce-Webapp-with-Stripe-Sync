<% if flash[:notice] %>
    <div class="flex items-center p-4 mb-4 text-sm text-blue-800 rounded-lg bg-blue-50 dark:bg-gray-800 dark:text-blue-400" role="alert">
        <svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
        </svg>
        <span class="sr-only">Info</span>
        <div>
            <span class="font-medium"><%= flash[:notice] %></span>
        </div>
    </div>
<% end %>
<!-- カートリスト -->
<div class="flex flex-col items-center pt-10 antialiased">
    <div class="flex w-full flex-col space-y-4 py-4 md:w-4/5 lg:w-1/2">
        <h1
            class="py-2 text-center text-2xl font-bold md:text-start md:text-4xl"
          >
            カートリスト
        </h1>
        <!-- 商品1 -->
        <% @cart_items.each do |cart_item| %>
            <div
            class="mx-2 flex rounded-2xl border border-black bg-white p-3 md:p-6"
          >
                <!-- 商品画像 -->
                <!-- TODO: 画像アップロード場所が決まったら実装する -->
                <div class="flex w-1/2 items-center md:w-2/5 lg:w-1/3">
                    <%= image_tag 'sample_image.jpg', class: 'block h-1/2 rounded-lg shadow-xl md:h-auto' %>
                </div>
                <!-- 商品情報 -->
                <div
              class="ml-2 flex w-1/2 flex-col justify-center md:ml-6 md:w-full md:flex-row md:justify-between"
            >
                    <div class="w-full space-y-2 md:w-2/3">
                        <a href="#">
                            <h1
                    class="text-lg text-sky-400 hover:text-orange-400 hover:underline"
                  >
                                <%= link_to cart_item.name, cart_item %>
                            </h1>
                        </a>
                        <p class="text-sm md:text-base"><%= cart_item.creator %></p>
                        <!-- 星評価を★と☆で表現する -->
                        <p class="text-sm font-bold text-orange-500 md:text-base">
                            ★★★★★
                        </p>
                        <!-- 数量のセレクトボックス -->
                        <div class="flex max-w-sm items-center">
                            <%= form_with url: cart_path, method: :patch do |f| %>
                                <%= hidden_field_tag 'product_id', cart_item.id%>
                                <%= label_tag 'quantity', '数量:', class: 'ml-1 block text-sm text-gray-900 md:text-lg'  %>
                                <%= select_tag 'quantity', options_for_select((1..cart_item.stock).to_a.collect{ |n| [n, n] }, selected: @cart[cart_item.id.to_s]),{class: 'ml-2 block rounded-lg border border-gray-300 bg-gray-200 p-1 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500', onchange: 'this.form.submit()', data: { turbo: false }  }%>
                            <% end %>
                        </div>
                        <!-- TODO: デジタル、物理のテーブルを作成した時に実装する -->
                        <p>デジタル商品</p>
                        <p>¥<%= cart_item.price %></p>
                    </div>
                    <!-- 購入と削除ボタン -->
                    <div
                class="flex w-full flex-col items-center justify-center space-y-2 pt-2 md:w-1/3 md:space-y-6 md:pt-0"
              >
                        <button
                  type="button"
                  class="w-full rounded-full bg-yellow-400 p-3 text-sm hover:bg-yellow-500 lg:p-2 lg:text-base"
                >
                            ご購入手続きへ
                        </button>
                        <%= form_with url: cart_path, method: :delete, class: 'w-full' do |f| %>
                            <%= hidden_field_tag 'product_id', cart_item.id%>
                            <%= button_tag '削除', type: 'submit', data: { turbo: false }, class: 'flex w-full justify-center rounded-full border border-gray-300 bg-white p-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700' do %>
                                <svg
                    class="h-6 w-6"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    fill="none"
                    viewBox="0 0 24 24"
                  >
                                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"
                    />
                                    </svg>削除
                                <% end%>
                            <% end %>
                        </div>
                    </div>
                </div>
            <% end %>