<%= render 'layouts/flash' %>
<!-- Toast container -->
<div id="toast-container" class="fixed bottom-5 right-5 flex flex-col gap-3"></div>
<!-- ウィッシュリスト -->
<div class="flex flex-col items-center py-10 antialiased">
  <div class="flex w-full flex-col space-y-4 py-4 md:w-4/5 lg:w-3/5">
    <h1 class="py-2 text-2xl font-bold text-start px-4 md:text-4xl">
        ウィッシュリスト
    </h1>
    <div class="flex flex-col md:flex-row md:justify-between space-y-2 px-4 md:px-6 md:items-center">
        <!-- ウィッシュリストのアカウント名 -->
        <div class="flex justify-start items-start gap-4">
          <% if @is_my_wishlist %>
            <div class="font-medium">あなたのウィッシュリスト</div>
          <% else %>
            <div class="font-medium"><%= @customer.customer_account.user_name %>さんのウィッシュリスト</div>
          <% end %>
        </div>
        <% if @is_my_wishlist %>
            <button id="share-link" data-url="<%= request.original_url %>" class="flex items-center text-sky-400 hover:text-orange-400 hover:underline bg-transparent border-none p-0 cursor-pointer">
                <svg
                  class="h-6 w-6"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13.213 9.787a3.391 3.391 0 0 0-4.795 0l-3.425 3.426a3.39 3.39 0 0 0 4.795 4.794l.321-.304m-.321-4.49a3.39 3.39 0 0 0 4.795 0l3.424-3.426a3.39 3.39 0 0 0-4.794-4.795l-1.028.961"
                  />
                </svg>
                <p>リンクの共有</p>
            </button>
        <% end %>
    </div>

    <% if @wish_products.any? %>
      <% @wish_products.each_with_index do |wish_product, index| %>
        <div class="mx-2 flex flex-col rounded-lg border border-gray-200 bg-white shadow-md dark:border-gray-700 dark:bg-gray-800 p-3 md:p-6 product-item">
          <% if wish_product.product.status != 'published' %>
            <div class="flex items-center p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-700 dark:text-red-400" role="alert">
              <svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
              </svg>
              <span class="sr-only">Info</span>
              <div>
                <span class="font-medium">この商品は現在購入できません
              </div>
            </div>
          <% end %>
          <div class="flex w-full flex-col md:flex-row">
            <div class="flex w-full md:w-2/3">
              <!-- 商品画像 -->
              <div class="flex w-1/2 items-center">
                <% if wish_product.product.images.attached? %>
                  <%= image_tag wish_product.product.images.first.variant(resize_to_fill: [300, 200]).processed, class: 'block rounded-lg shadow-lg', alt: '商品画像' %>
                <% else %>
                  <%= image_tag 'sample_image.jpg', class: 'block rounded-lg shadow-lg', size: "300x200", alt: '商品画像' %>
                <% end %>
              </div>

              <!-- 商品情報 -->
              <div class="ml-4 flex w-1/2 flex-col justify-between md:w-full md:flex-row md:ml-6">
                <div class="py-3 space-y-1 md:space-y-2 md:w-2/3">
                  <%= link_to wish_product.product.name, wish_product.product, class: 'text-lg font-semibold text-sky-500 hover:text-orange-400 hover:underline' %>
                  <p class="text-sm lg:text-base dark:text-white"><%= wish_product.product.creator %></p>
                  <p class="text-sm font-bold text-orange-500 lg:text-base"><%= star_rating(@average_ratings[wish_product.product.id]) %></p>
                  <!-- 数量のセレクトボックス -->
                  <%= form_with model: wish_product.product, class: 'flex' do |form|%>
                      <%= form.label :quantity, '数量:', class: 'py-1 block text-sm text-gray-900 lg:text-base dark:text-white' %>
                      <%= form.select :quantity, options_for_select((1..wish_product.product.remaining_stock).to_a.collect { |n| [n, n] }, selected: 1),{} ,class: 'ml-2 block rounded-lg border border-gray-300 bg-gray-200 p-1 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 quantity'%>
                  <% end %>
                  <p class="text-sm lg:text-base dark:text-white">デジタル商品</p>
                  <p class="text-sm font-semibold text-gray-900 dark:text-white">¥<%= wish_product.product.price %></p>
                </div>
              </div>
            </div>

            <!-- オプションボタン -->
            <div class="flex w-full items-end md:w-1/3 flex-col mt-2 pt-2 space-y-4 md:pt-0">
              <% if wish_product.product.status == 'published' %>
                <%= form_with url: cart_path ,model: wish_product.product, method: :post,local:true,  data:{turbo: false}, class: 'w-full cart-form' do |form| %>
                    <%= form.hidden_field :id %>
                    <%= form.hidden_field :quantity , class: 'cart-quantity', value: 1 %>
                    <%= form.submit 'カートに入れる', class: 'w-full rounded-full bg-emerald-400 p-3 text-sm text-white hover:bg-emerald-500 lg:p-2 lg:text-base add-to-cart-button hover:cursor-pointer' %>
                <% end %>
                <%= form_with url: checkout_path, model: wish_product.product,method: :post, local:true,  data:{turbo: false} ,class: 'w-full  checkout-form' do |form|%>
                    <%= form.hidden_field :id %>
                    <%= form.hidden_field :quantity , class: 'checkout-quantity' %>
                    <%= hidden_field_tag :checkout_action, true %>
                    <%= form.submit 'ご購入手続きへ',class: 'w-full rounded-full bg-yellow-400 p-3 text-sm text-white hover:bg-yellow-500 lg:p-2 lg:text-base hover:cursor-pointer  checkout-button'%>
                <% end %>
              <% else %>
                <div class="w-full" data-tooltip-target="cart-tooltip-wish-product-<%= index %>" data-tooltip-placement="top">
                  <button type="button" class="w-full rounded-full border border-gray-300 bg-gray-200 px-6 py-2 text-gray-500 cursor-not-allowed lg:p-2 lg:text-base" disabled>
                    カートに入れる
                  </button>
                  <div id="cart-tooltip-wish-product-<%= index %>" role="tooltip" class="absolute z-10 inline-block rounded-lg bg-gray-900 px-3 py-2 text-sm font-medium text-white opacity-0 shadow-sm dark:bg-gray-700">
                      この機能は商品が購入できないため利用できません
                      <div class="tooltip-arrow" data-popper-arrow></div>
                  </div>
                </div>
                <div class="w-full" data-tooltip-target="checkout-tooltip-wish-product-<%= index %>" data-tooltip-placement="top">
                  <button type="button" class="w-full rounded-full border border-gray-300 bg-gray-200 px-6 py-2 text-gray-500 cursor-not-allowed lg:p-2 lg:text-base" disabled>
                    ご購入手続きへ
                  </button>
                  <div id="checkout-tooltip-wish-product-<%= index %>" role="tooltip" class="absolute z-10 inline-block rounded-lg bg-gray-900 px-3 py-2 text-sm font-medium text-white opacity-0 shadow-sm dark:bg-gray-700">
                      この機能は商品が購入できないため利用できません
                      <div class="tooltip-arrow" data-popper-arrow></div>
                  </div>
                </div>
              <% end %>
              <% if @is_my_wishlist %>
                <%= form_with(url: customer_account_wish_product_path(current_customer_account, wish_product), method: :delete, class: 'w-full') do %>
                  <button
                    type="submit"
                    class="flex w-full justify-center rounded-full border border-gray-300 bg-white p-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700"
                  >
                    <svg
                      class="h-6 w-6"
                      aria-hidden="true"
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      fill="none"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"
                      />
                    </svg>
                    削除
                  </button>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- ページネーション -->
      <%= paginate @wish_products %>
    <% else %>
      <div class="mx-2 rounded-lg border border-gray-200 bg-white dark:border-gray-700 dark:bg-gray-800 p-3 md:p-6">
          <p class="text-center md:text-xl dark:text-white">ウィッシュリストに商品がありません</p>
      </div>
    <% end %>
  </div>
</div>

<%= javascript_include_tag "clipboard", "data-turbo-track": "reload", type: "module" %>
<%= javascript_include_tag 'checkout_button', type: 'module' %>
