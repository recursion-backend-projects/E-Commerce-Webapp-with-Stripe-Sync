<header class="antialiased">
  <nav class="border-gray-200 bg-white px-4 py-2.5 dark:bg-gray-800 md:px-6">
    <div class="flex flex-wrap items-center justify-between">
      <!-- アプリケーション名とロゴ -->
      <%= link_to root_path, class: 'mr-4 flex' do %>
        <img src="https://flowbite.s3.amazonaws.com/logo.svg" class="mr-3 h-8" alt="FlowBite Logo" />
        <span class="self-center whitespace-nowrap text-2xl font-semibold dark:text-white">Art-SA2</span>
      <% end %>
      <!-- 検索欄 -->
      <%= form_with(url: search_products_path, method: :get, local: true, data: { turbo: false }, class: "order-last w-full pt-2 md:order-none md:w-1/2 md:pt-0") do |form| %>
        <div class="flex">
          <!-- TODO リリース日を追加する -->
          <%= form.select :type, options_for_select([["商品名", "name"], ["商品説明", "description"], ["作者", "creator"]]), {}, class: "flex-shrink-0 z-10 inline-flex items-center py-2.5 px-4 text-sm font-medium text-center text-gray-500 bg-gray-100 border border-gray-300 rounded-s-lg hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-100 dark:bg-gray-700 dark:hover:bg-gray-600 dark:focus:ring-gray-700 dark:text-white dark:border-gray-600" %>
          <div class="relative w-full">
            <%= form.label :keyword, class: "mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white" %>
            <%= form.text_field :keyword, placeholder: "キーワードを検索", class: "block p-2.5 w-full z-20 text-sm text-gray-900 bg-gray-50 rounded-e-lg border-s-gray-50 border-s-2 border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-s-gray-700  dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:border-blue-500" %>
            <%= button_tag type: 'submit', class: "absolute end-0 top-0 h-full rounded-e-lg border border-blue-700 bg-blue-700 p-2.5 text-sm font-medium text-white hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
                  <svg
                    class="h-4 w-4"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 20 20"
                  >
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"
                    />
                  </svg>
                  <span class="sr-only">検索</span>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="flex items-center md:order-2">
        <!-- カートボタン -->
        <%= link_to cart_path, 
            data: { tooltip_target: 'cart-tooltip', 
                    tooltip_placement: 'bottom', 
                    dropdown_toggle: 'menuDropdown' }, 
            aria: { expanded: 'true', controls: 'sidebar' }, 
            class: 'ml-1 cursor-pointer rounded p-2 text-gray-600 hover:bg-gray-100 hover:text-gray-900 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white md:ml-3 md:inline' do %>
          <div class="flex">
            <svg class="size-6 text-gray-800 hover:bg-gray-100 hover:text-gray-900 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 4h1.5L9 16m0 0h8m-8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm-8.5-3h9.25L19 7H7.312"/>
            </svg>
            <span class="font-bold text-orange-500">+<%= @cart_items_count %></span>
          </div>
          <div id="cart-tooltip" role="tooltip" class="tooltip invisible absolute z-10 inline-block rounded-lg bg-gray-900 px-3 py-2 text-sm font-medium text-white opacity-0 shadow-sm dark:bg-gray-700">
            カートリスト
            <div class="tooltip-arrow" data-popper-arrow></div>
          </div>
        <% end %>
        <!-- メニューボタン -->
        <button data-tooltip-target="menu-tooltip" data-tooltip-placement="bottom" data-dropdown-toggle="menuDropdown" aria-expanded="true" aria-controls="sidebar" class="ml-1 cursor-pointer rounded p-2 text-gray-800 hover:bg-gray-100 hover:text-gray-900 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:ml-3 md:inline">
          <svg class="size-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 16 12">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h14M1 6h14M1 11h14M1"/>
          </svg>
          <div id="menu-tooltip" role="tooltip" class="tooltip invisible absolute z-10 inline-block rounded-lg bg-gray-900 px-3 py-2 text-sm font-medium text-white opacity-0 shadow-sm dark:bg-gray-700">
            メニュー
            <div class="tooltip-arrow" data-popper-arrow></div>
          </div>
        </button>
        <!-- メニューのドロップダウンリスト -->
        <div id="menuDropdown" class="z-10 hidden w-44 divide-y divide-gray-100 rounded bg-white shadow dark:divide-gray-600 dark:bg-gray-700">
          <ul class="py-1 text-sm text-gray-800 dark:text-gray-200" aria-labelledby="menuDropdownButton">
            <li>
              <%= link_to 'ホーム', root_path, class: 'block px-4 py-2 font-bold hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' %>
            </li>
            <% if current_customer_account %>
              <li>
                <%= link_to 'ウィッシュリスト', customer_account_wish_products_path(current_customer_account), data: { turbo_method: :get }, class: 'block px-4 py-2 font-bold hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' %>
              </li>
              <li>
                <%= link_to 'お気に入り', favorite_products_path, data: { turbo_method: :get }, class: 'block px-4 py-2 font-bold hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' %>
              </li>
              <li>
                <a href="#" class="block px-4 py-2 font-bold hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">チャット</a>
              </li>
              <li>
                <%= link_to '購入履歴', orders_path, class: 'block px-4 py-2 font-bold hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' %>
              </li>
              <li>
              <%= link_to 'ダウンロードリスト', download_products_path, data: { turbo_method: :get }, class: 'block px-4 py-2 font-bold hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' %>
              </li>
              <li>
                <a href="#" class="block px-4 py-2 font-bold hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">アカウント情報</a>
              </li>
              <li>
                <%= link_to 'ログアウト', destroy_customer_account_session_path, data: { turbo_method: :delete }, class: 'block px-4 py-2 font-bold hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' %>
              </li>
            <% else %>
              <li>
                <p data-tooltip-target="wishlist-tooltip" data-tooltip-placement="left" class="block px-4 py-2 font-bold text-gray-300 dark:text-gray-400">
                  ウィッシュリスト
                </p>
                <div id="wishlist-tooltip" role="tooltip" class="tooltip invisible absolute z-10 inline-block rounded-lg bg-gray-900 px-3 py-2 text-sm font-medium text-white opacity-0 shadow-sm dark:bg-gray-700">
                  ログインすると、ウィッシュリストを利用できます
                  <div class="tooltip-arrow" data-popper-arrow></div>
                </div>
              </li>
              <li>
                <p data-tooltip-target="favorite-tooltip" data-tooltip-placement="left" class="block px-4 py-2 font-bold text-gray-300 dark:text-gray-400">
                  お気に入り
                </p>
                <div id="favorite-tooltip" role="tooltip" class="tooltip invisible absolute z-10 inline-block rounded-lg bg-gray-900 px-3 py-2 text-sm font-medium text-white opacity-0 shadow-sm dark:bg-gray-700">
                  ログインすると、お気に入りを利用できます
                  <div class="tooltip-arrow" data-popper-arrow></div>
                </div>
              </li>
              <li>
                <p data-tooltip-target="chatlist-tooltip" data-tooltip-placement="left" class="block px-4 py-2 font-bold text-gray-300 dark:text-gray-400">
                  チャット
                </p>
                <div id="chatlist-tooltip" role="tooltip" class="tooltip invisible absolute z-10 inline-block rounded-lg bg-gray-900 px-3 py-2 text-sm font-medium text-white opacity-0 shadow-sm dark:bg-gray-700">
                  ログインすると、チャットを利用できます
                  <div class="tooltip-arrow" data-popper-arrow></div>
                </div>
              </li>
              <li>
                <p data-tooltip-target="orderlist-tooltip" data-tooltip-placement="left" class="block px-4 py-2 font-bold text-gray-300 dark:text-gray-400">
                  購入履歴
                </p>
                <div id="orderlist-tooltip" role="tooltip" class="tooltip invisible absolute z-10 inline-block rounded-lg bg-gray-900 px-3 py-2 text-sm font-medium text-white opacity-0 shadow-sm dark:bg-gray-700">
                  ログインすると、購入履歴を利用できます
                  <div class="tooltip-arrow" data-popper-arrow></div>
                </div>
              </li>
              <li>
                <p data-tooltip-target="download-list-tooltip" data-tooltip-placement="left" class="block px-4 py-2 font-bold text-gray-300 dark:text-gray-400">
                  ダウンロードリスト
                </p>
                <div id="download-list-tooltip" role="tooltip" class="tooltip invisible absolute z-10 inline-block rounded-lg bg-gray-900 px-3 py-2 text-sm font-medium text-white opacity-0 shadow-sm dark:bg-gray-700">
                  ログインすると、ダウンロードリストを利用できます
                  <div class="tooltip-arrow" data-popper-arrow></div>
                </div>
              </li>
              <li>
                <p data-tooltip-target="account-info-tooltip" data-tooltip-placement="left" class="block px-4 py-2 font-bold text-gray-300 dark:text-gray-400">
                  アカウント情報
                </p>
                <div id="account-info-tooltip" role="tooltip" class="tooltip invisible absolute z-10 inline-block rounded-lg bg-gray-900 px-3 py-2 text-sm font-medium text-white opacity-0 shadow-sm dark:bg-gray-700">
                  ログインすると、アカウント情報を利用できます
                  <div class="tooltip-arrow" data-popper-arrow></div>
                </div>
              </li>
              <li>
                <%= link_to 'アカウント作成', new_customer_account_registration_path, data: { turbo_method: :get }, class: 'block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' %>
              </li>
              <li>
                <%= link_to 'ログイン', new_customer_account_session_path, data: { turbo_method: :get }, class: 'block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' %>
              </li>
            <% end %>
          </ul>
          <div class="py-1 inline-block md:hidden">
            <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="menuDropdownButton">
              <li>
                <p class="block px-4 py-2 font-bold hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                  カテゴリー
                </p>
              </li>
              <li>
                <%= link_to '絵画', search_products_path(type: 'category', keyword: '絵画'), data: { turbo_method: :get }, class: 'block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' %>
              </li>
              <li>
                <%= link_to '彫刻', search_products_path(type: 'category', keyword: '彫刻'), data: { turbo_method: :get }, class: 'block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' %>
              </li>
              <li>
                <%= link_to '写真', search_products_path(type: 'category', keyword: '写真'), data: { turbo_method: :get }, class: 'block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' %>
              </li>
              <li>
                <%= link_to 'イラスト', search_products_path(type: 'category', keyword: 'イラスト'), data: { turbo_method: :get }, class: 'block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="flex pb-1 pt-4">
      <!-- ログインしているアカウント名(ログインしていない場合は、ゲストユーザー) -->
      <div class="flex items-center gap-4 md:w-1/4">
        <!-- デフォルトアバターアイコン -->
        <div class="relative size-8 overflow-hidden rounded-full bg-gray-100 dark:bg-gray-600">
          <svg class="absolute -left-1 size-12 text-gray-400" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="font-medium dark:text-white">
          <% if current_customer_account %>
            <div><%= current_customer_account.email %></div>
          <% else %>
            <div>ゲストユーザー</div>
          <% end %>
        </div>
      </div>
      <!-- カテゴリー -->
      <div class="hidden md:flex md:w-1/2 md:justify-around md:items-center">
        <%= link_to '絵画', search_products_path(type: 'category', keyword: '絵画'), data: { turbo_method: :get }, class: 'rounded-full px-4 py-2 font-bold hover:bg-gray-200 dark:text-white hover:dark:bg-gray-600' %>
        <%= link_to '彫刻', search_products_path(type: 'category', keyword: '彫刻'), data: { turbo_method: :get }, class: 'rounded-full px-4 py-2 font-bold hover:bg-gray-200 dark:text-white hover:dark:bg-gray-600' %>
        <%= link_to '写真', search_products_path(type: 'category', keyword: '写真'), data: { turbo_method: :get }, class: 'rounded-full px-4 py-2 font-bold hover:bg-gray-200 dark:text-white hover:dark:bg-gray-600' %>
        <%= link_to 'イラスト', search_products_path(type: 'category', keyword: 'イラスト'), data: { turbo_method: :get }, class: 'rounded-full px-4 py-2 font-bold hover:bg-gray-200 dark:text-white hover:dark:bg-gray-600' %>
      </div>
    </div>
  </nav>
</header>
